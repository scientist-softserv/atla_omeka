#!/bin/bash

if [ -z "$1" ] || [ -z "$2" ]
then
    echo './bin/helm_deploy RELEASE_NAME NAMESPACE'
    exit 1
fi
release_name="${1}"
namespace="${2}"

DEPLOY_IMAGE="${DEPLOY_IMAGE:-ghcr.io/scientist-softserv/atla_omeka}"
DEPLOY_TAG="${DEPLOY_TAG:-latest}"

helm upgrade \
    --install \
    --atomic \
    --timeout 15m0s \
    --set rails.image.repository="$DEPLOY_IMAGE" \
    --set rails.image.tag="$DEPLOY_TAG" \
    --namespace="$namespace" \
    --create-namespace \
    "$release_name" \
    chart
